<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="SemitoneTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#ff000000</item>
        <item name="colorAccent">@color/blue</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:itemBackground">@color/grey1</item>
        <item name="android:panelBackground">@color/grey2</item>
    </style>

    <style name="SemitoneTheme.NoTitle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#ff000000</item>
        <item name="colorAccent">@color/blue</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:itemBackground">@color/grey1</item>
        <item name="android:panelBackground">@color/grey2</item>
    </style>
</resources>
